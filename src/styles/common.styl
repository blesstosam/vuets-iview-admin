//  ==============按钮样式=============
//按钮里的 icon 样式
.ivu-btn>.ivu-icon
  font-size 16px
  line-height 0
//  按钮之间的间隔
.left20
  margin-left 20px
// 表格中的点击span
.table-span {
  color: blue;
  cursor: pointer;
}

//  表格样式
.red-txt
  color #e74c3c
.green-txt
  color #19be6b
.green-cir
  width 11px
  height 11px
  display inline-block
  background #19be6b
  border-radius 50% 50%
  margin-right 5px
.red-cir
  width: 11px
  height: 11px
  display: inline-block
  background: #e74c3c
  border-radius: 50% 50%
  margin-right: 5px


// 表格操作按钮icon样式
.action-icon-style
  margin-right: 5px
  width: 22px
  height:22px
  font-size: 16px
  line-height: 22px
  color: white
  padding: 0 2px
  border-radius: 3px

.ivu-menu-vertical.ivu-menu-light:after
  width: 0 !important;


