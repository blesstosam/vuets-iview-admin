// 侧边栏样式 - dark
.left-sider-dark
  background $theme-dark 
  box-shadow 2px 0 6px rgba(0,21,41,.35) 
  .ivu-menu-dark
    background $theme-dark
    &.ivu-menu-vertical .ivu-menu-opened
      background $theme-dark-sub-menu
    &.ivu-menu-vertical .ivu-menu-opened .ivu-menu-submenu-title
      background $theme-dark
    &.ivu-menu-vertical .ivu-menu-submenu-title:hover
      background $theme-dark !important
  // 头像下面的一条分隔线    
  & .avatar-wrap
    border-bottom 2px solid $theme-dark-avatar-wrap-border 
// 侧边栏样式 - light
.left-sider-light
  background $theme-light 
  box-shadow 2px 0 8px 0 rgba(29,35,41,.05)
  .ivu-menu-light
    background $theme-light
    &.ivu-menu-vertical .ivu-menu-opened
      background $theme-light
    &.ivu-menu-vertical .ivu-menu-opened .ivu-menu-submenu-title
      background $theme-light
    &.ivu-menu-vertical .ivu-menu-submenu-title:hover
      background $theme-light !important
  & .avatar-wrap
    border-bottom 1px solid $theme-light-avatar-wrap-border 

// header 样式 - dark
.header-con-dark
  background $theme-dark-sub-menu
  color $theme-light
// header 样式 - light
.header-con-light
  background $theme-light
// header 样式 - primary
.header-con-primary
  background linear-gradient(90deg, $theme-primary-first, $theme-primary-second, $theme-primary-three)
  color $theme-light

